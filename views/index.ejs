

    <div class="jumbotron">
        <h1>CPA02: Brandeis University Course Finder Fall21-Spring22-Summer22 </h1>
        <p></p>
    </div>

    <p class="p-3 m-3 border border-primary bg-light">
        You must signup or login to see
        the courses and create your schedule.
    </p>
    
    <% if (true || loggedIn) {%>  
        <form method="post" action="/courses/bySubject">
            Show Courses by Subject: 
              <input type="text" name="subject" 
                     placeholder="e.g. COSI">
            <input type="submit">
        </form>
        <br>
        <form method="post" action="/courses/bySubject_max_limit">
            Show Courses by Subject and maximum capacity: 
              <input type="text" name="subject" 
                     placeholder="e.g. COSI">
              <input type="text" name="max_capacity" 
                     placeholder="e.g. 150" >
            <input type="submit">
        </form>
        <br>
        <form method="post" action="/courses/bySubject_min_limit">
            Show Courses by Subject and minimum capacity: 
              <input type="text" name="subject" 
                     placeholder="e.g. COSI">
              <input type="text" name="min_capacity" 
                     placeholder="e.g. 80" >
            <input type="submit">
        </form>
        <br>
        <form method="post" action="/courses/byInst">
            Show Courses by Instructor Email: 
            <input type="text" name="email" 
                   placeholder="e.g. tjhickey">
            <input type="submit">
        </form>
        <br>
        <form method="post" action="/courses/byKeyword">
            Show Courses by Keyword: 
              <input type="text" name="keyword" 
                     placeholder="e.g. Application">
            <input type="submit">
        </form>
        <br>
        <a href="/schedule/show">Show Schedule</a>
    <% } %>


